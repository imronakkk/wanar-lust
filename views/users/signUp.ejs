<% layout('/layouts/boilerplate') -%>

<body>
    <div class="row">
        <div class="col-8 offset-2">

            <fieldset>
                <legend><b>User Sign Up On Wanderlust</b></legend>
                <form method="post" action="/signUp" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">UserName:</label>
                        <input type="text" id="username" name="username" placeholder="username" required class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                          <div class="invalid-feedback">
                            Please choose a username.
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">email:</label>
                        <input id="email" type="email" name="email" class="form-control"  placeholder="email" required >
                        
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">password:</label>
                        <input id="password" type="password" name="password" class="form-control"  placeholder="password" required >
                        
                    </div>
                    
                   
                   
                  
                    <div class="mb-3">
                        
                        <button class="btn btn-success ">SignUp</button>
                    </div>
            </form>
        </fieldset>
       </div>
    </div>
    
</body>